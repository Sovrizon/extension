{
  "manifest_version": 3,
  "name": "Sovrizon-Extension",
  "version": "1.0",
  "description": "Extension de gestion de données chiffrées via Vault",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon-extension.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "runtime"
  ],
  "host_permissions":
    ["http://localhost:5173/*", "http://localhost:8300/*"]
  ,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "dashboard.html"
}